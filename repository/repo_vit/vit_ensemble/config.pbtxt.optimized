name: "vit_ensemble"
platform: "ensemble"

input [
  {
    name: "pixel_values"
    data_type: TYPE_FP32
    dims: [ -1, 3, 224, 224 ]
  },
  {
    name: "batch_mask"
    data_type: TYPE_BOOL
    dims: [ 4, -1 ]
  },
  {
    name: "logits"
    data_type: TYPE_FP32
    dims: [ -1, 1000 ]
  }
]

output [
  {
    name: "logits"
    data_type: TYPE_FP32
    dims: [ -1, 1000 ]
  },
  {
    name: "batch_mask"
    data_type: TYPE_BOOL
    dims: [ 4, -1 ]
  }
]

ensemble_scheduling {
  step [ 
    {
      model_name: "vit_e0p0"
      model_version: -1
      input_map {
        key: "pixel_values"
        value: "pixel_values"
      }
      input_map {
        key: "batch_mask"
        value: "batch_mask"
      }
      input_map {
        key: "logits"
        value: "logits"
      }
      output_map {
        key: "logits"
        value: "logits_0"
      }
      output_map {
        key: "batch_mask"
        value: "batch_mask_0"
      }
    },
    {
      model_name: "vit_e1p0"
      model_version: -1
      input_map {
        key: "logits"
        value: "logits_0"
      }
      input_map {
        key: "pixel_values"
        value: "pixel_values"
      }
      input_map {
        key: "batch_mask"
        value: "batch_mask_0"
      }
      output_map {
        key: "logits"
        value: "logits_1"
      }
      output_map {
        key: "batch_mask"
        value: "batch_mask_1"
      }
    },
    {
      model_name: "vit_e2p0"
      model_version: -1
      input_map {
        key: "logits"
        value: "logits_1"
      }
      input_map {
        key: "pixel_values"
        value: "pixel_values"
      }
      input_map {
        key: "batch_mask"
        value: "batch_mask_1"
      }
      output_map {
        key: "logits"
        value: "logits_2"
      }
      output_map {
        key: "batch_mask"
        value: "batch_mask_2"
      }
    },
    {
      model_name: "vit_e3p0"
      model_version: -1
      input_map {
        key: "logits"
        value: "logits_2"
      }
      input_map {
        key: "pixel_values"
        value: "pixel_values"
      }
      input_map {
        key: "batch_mask"
        value: "batch_mask_2"
      }
      output_map {
        key: "logits"
        value: "logits"
      }
      output_map {
        key: "batch_mask"
        value: "batch_mask"
      }
    }
  ]
}